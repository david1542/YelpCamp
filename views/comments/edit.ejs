<% include ../partials/header %>

<div>    
        <h1 style="text-align: center;">Edit Comment</h1>
        <div class="row" style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <input id="comment" class="form-control" type="text" name="comment[text]" placeholder="text" value="<%= comment.text %>">                        
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View Campgrounds</a> 
        </div>
    </div>
<% include ../partials/footer %>