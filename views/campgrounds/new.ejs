<% include ../partials/header %>

    <div>    
        <h1 style="text-align: center;">Create a New Campground</h1>
        <div class="row" style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="name" placeholder="Yosemite">                        
                </div>
                <div class="form-group">
                    <label for="price">Price/Night</label>
                    <input id="price" class="form-control" type="number" name="price" placeholder="10.0" min="0.1" step="0.1">                        
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Example: Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" class="form-control" type="text" name="image" placeholder="Img URL">                 
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input class="form-control" type="text" name="desc" placeholder="This place is awesome!">                                         
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">View Campgrounds</a> 
        </div>
    </div>
<% include ../partials/footer %>