<% include ../partials/header %>

    <div>    
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div class="row" style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" class="form-control" type="text" name="campground[name]" placeholder="Yosemite" value="<%= campground.name %>">                        
                </div>
                <div class="form-group">
                    <label for="price">Price/Night</label>
                    <input id="price" class="form-control" type="number" name="campground[price]" placeholder="10.0" value="<%= campground.price %>" min="0.1" step="0.1">                        
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="campground[location]" placeholder="Example: Yosemite National Park, CA" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input id="image" class="form-control" type="text" name="campground[image]" placeholder="Img URL" value="<%= campground.image %>">                 
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input id="desc" class="form-control" type="text" name="campground[desc]" placeholder="This place is awesome!" value="<%= campground.desc %>">                                         
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">Update</button>
                </div>
            </form>
            <a href="/campgrounds">View Campgrounds</a> 
        </div>
    </div>
<% include ../partials/footer %>